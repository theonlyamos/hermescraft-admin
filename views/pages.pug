extends layout

block styles
  link(rel="stylesheet" type="text/css" href="/vendor/datatables/datatables.bundle.css")

block content
  .container1-page
    // breadcrumb
    .container
      .bread-crumb.bgwhite.flex-w.p-r-15.p-t-30.p-l-15-sm
        a.s-text16(href="/")
          | Home
          i.fa.fa-angle-right.m-l-8.m-r-9(aria-hidden="true")
        span.s-text17(href="/pages")
          | Pages

    // Content page
    section.bgwhite.p-t-55.p-b-65
      .container
        .d-flex.justify-content-between
          h3.m-subheader__title Pages
          a.btn.btn-clear.btn-outline-dark.btn-lg.rounded-pill(href="/pages/add")
            i.fa.fa-plus.fa-fw
            small Add Page
       
        .row.mt-5
          each page in pages
            .col-sm-10.col-md-8.col-lg-3
              // block1
              a.block1.hov-img-zoom.pos-relative.m-b-20.bg-light(href="/pages/"+page._id)
                .d-flex.align-items-center.justify-content-center.w-100.text-center.p-b-60.pt-5
                  i(class="fa fa-"+page.icon style="font-size: 100px")
                .block1-wrapbtn.w-size2
                  // Button
                  .flex-c-m.m-text2.text-center.bg3.hov1.trans-0-4
                    | #{page.name}
block scripts
  if (error)
    script(type="text/javascript").
        swal("Error", "#{errMsg}", "error");
  if (message)
    script(type="text/javascript").
        swal("#{msgTitle}" ? "#{msgTitle}" : "Success", "#{message}", "success");