extends layout

block content
  .container1-page
    // Content page
    section.bgwhite.p-b-65
      .container
        .d-flex
          // breadcrumb
          .bread-crumb.bgwhite.flex-w.p-r-15.p-t-30.p-l-15-sm
            a.s-text16(href="/")
              | Home
              i.fa.fa-angle-right.m-l-8.m-r-9(aria-hidden="true")
            a.s-text16(href="/customers")
              | Customers
              i.fa.fa-angle-right.m-l-8.m-r-9(aria-hidden="true")
            span.s-text17
              | #{customer.username}
              
        .m-grid__item.m-grid__item--fluid.m-wrapper
          // BEGIN: Subheader
          .m-subheader
            .d-flex.align-items-center
              .mr-auto
                h3.m-subheader__title My Profile
              div
                .m-dropdown.m-dropdown--inline.m-dropdown--arrow.m-dropdown--align-right.m-dropdown--align-push(m-dropdown-toggle='hover' aria-expanded='true')
                  a.m-portlet__nav-link.btn.btn-lg.btn-secondary.m-btn.m-btn--outline-2x.m-btn--air.m-btn--icon.m-btn--icon-only.m-btn--pill.m-dropdown__toggle(href='#')
                    i.la.la-plus.m--hide
                    i.la.la-ellipsis-h
                  .m-dropdown__wrapper
                    span.m-dropdown__arrow.m-dropdown__arrow--right.m-dropdown__arrow--adjust
                    .m-dropdown__inner
                      .m-dropdown__body
                        .m-dropdown__content
                          ul.m-nav
                            li.m-nav__section.m-nav__section--first.m--hide
                              span.m-nav__section-text Quick Actions
                            li.m-nav__item
                              a.m-nav__link(href='')
                                i.m-nav__link-icon.flaticon-share
                                span.m-nav__link-text Activity
                            li.m-nav__item
                              a.m-nav__link(href='')
                                i.m-nav__link-icon.flaticon-chat-1
                                span.m-nav__link-text Messages
                            li.m-nav__item
                              a.m-nav__link(href='')
                                i.m-nav__link-icon.flaticon-info
                                span.m-nav__link-text FAQ
                            li.m-nav__item
                              a.m-nav__link(href='')
                                i.m-nav__link-icon.flaticon-lifebuoy
                                span.m-nav__link-text Support
                            li.m-nav__separator.m-nav__separator--fit
                            li.m-nav__item
                              a.btn.btn-outline-danger.m-btn.m-btn--pill.m-btn--wide.btn-sm(href='#') Submit
          // END: Subheader
          .m-content
            .row
              .col-xl-3.col-lg-4
                .m-portlet.m-portlet--full-height.m-portlet--unair
                  .m-portlet__body
                    .m-card-profile
                      .m-card-profile__title.m--hide
                        | Your Profile
                      .m-card-profile__pic
                        .m-card-profile__pic-wrapper
                          img(src='assets/app/media/img/users/user4.jpg' alt='')
                      .m-card-profile__details
                        span.m-card-profile__name Mark Andre
                        a.m-card-profile__email.m-link(href='') mark.andre@gmail.com
                    ul.m-nav.m-nav--hover-bg.m-portlet-fit--sides
                      li.m-nav__separator.m-nav__separator--fit
                      li.m-nav__section.m--hide
                        span.m-nav__section-text Section
                      li.m-nav__item
                        a.m-nav__link(href='header/profile&demo=default.html')
                          i.m-nav__link-icon.flaticon-profile-1
                          span.m-nav__link-title
                            span.m-nav__link-wrap
                              span.m-nav__link-text My Profile
                              span.m-nav__link-badge
                                span.m-badge.m-badge--success 2
                      li.m-nav__item
                        a.m-nav__link(href='header/profile&demo=default.html')
                          i.m-nav__link-icon.flaticon-share
                          span.m-nav__link-text Activity
                      li.m-nav__item
                        a.m-nav__link(href='header/profile&demo=default.html')
                          i.m-nav__link-icon.flaticon-chat-1
                          span.m-nav__link-text Messages
                      li.m-nav__item
                        a.m-nav__link(href='header/profile&demo=default.html')
                          i.m-nav__link-icon.flaticon-graphic-2
                          span.m-nav__link-text Sales
                      li.m-nav__item
                        a.m-nav__link(href='header/profile&demo=default.html')
                          i.m-nav__link-icon.flaticon-time-3
                          span.m-nav__link-text Events
                      li.m-nav__item
                        a.m-nav__link(href='header/profile&demo=default.html')
                          i.m-nav__link-icon.flaticon-lifebuoy
                          span.m-nav__link-text Support
                    .m-portlet__body-separator
                    .m-widget1.m-widget1--paddingless
                      .m-widget1__item
                        .row.m-row--no-padding.align-items-center
                          .col
                            h3.m-widget1__title Member Profit
                            span.m-widget1__desc Awerage Weekly Profit
                          .col.m--align-right
                            span.m-widget1__number.m--font-brand +$17,800
                      .m-widget1__item
                        .row.m-row--no-padding.align-items-center
                          .col
                            h3.m-widget1__title Orders
                            span.m-widget1__desc Weekly Customer Orders
                          .col.m--align-right
                            span.m-widget1__number.m--font-danger +1,800
                      .m-widget1__item
                        .row.m-row--no-padding.align-items-center
                          .col
                            h3.m-widget1__title Issue Reports
                            span.m-widget1__desc System bugs and issues
                          .col.m--align-right
                            span.m-widget1__number.m--font-success -27,49%
              .col-xl-9.col-lg-8
                .m-portlet.m-portlet--full-height.m-portlet--tabs.m-portlet--unair
                  .m-portlet__head
                    .m-portlet__head-tools
                      ul.nav.nav-tabs.m-tabs.m-tabs-line.m-tabs-line--left.m-tabs-line--primary(role='tablist')
                        li.nav-item.m-tabs__item
                          a.nav-link.m-tabs__link.active(data-toggle='tab' href='#m_user_profile_tab_1' role='tab')
                            i.flaticon-share.m--hide
                            | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;Update Profile
                        li.nav-item.m-tabs__item
                          a.nav-link.m-tabs__link(data-toggle='tab' href='#m_user_profile_tab_2' role='tab')
                            | Messages
                        li.nav-item.m-tabs__item
                          a.nav-link.m-tabs__link(data-toggle='tab' href='#m_user_profile_tab_3' role='tab')
                            | Settings
                    .m-portlet__head-tools
                      ul.m-portlet__nav
                        li.m-portlet__nav-item.m-portlet__nav-item--last
                          .m-dropdown.m-dropdown--inline.m-dropdown--arrow.m-dropdown--align-right.m-dropdown--align-push(m-dropdown-toggle='hover' aria-expanded='true')
                            a.m-portlet__nav-link.btn.btn-lg.btn-secondary.m-btn.m-btn--icon.m-btn--icon-only.m-btn--pill.m-dropdown__toggle(href='#')
                              i.la.la-gear
                            .m-dropdown__wrapper
                              span.m-dropdown__arrow.m-dropdown__arrow--right.m-dropdown__arrow--adjust
                              .m-dropdown__inner
                                .m-dropdown__body
                                  .m-dropdown__content
                                    ul.m-nav
                                      li.m-nav__section.m-nav__section--first
                                        span.m-nav__section-text Quick Actions
                                      li.m-nav__item
                                        a.m-nav__link(href='')
                                          i.m-nav__link-icon.flaticon-share
                                          span.m-nav__link-text Create Post
                                      li.m-nav__item
                                        a.m-nav__link(href='')
                                          i.m-nav__link-icon.flaticon-chat-1
                                          span.m-nav__link-text Send Messages
                                      li.m-nav__item
                                        a.m-nav__link(href='')
                                          i.m-nav__link-icon.flaticon-multimedia-2
                                          span.m-nav__link-text Upload File
                                      li.m-nav__section
                                        span.m-nav__section-text Useful Links
                                      li.m-nav__item
                                        a.m-nav__link(href='')
                                          i.m-nav__link-icon.flaticon-info
                                          span.m-nav__link-text FAQ
                                      li.m-nav__item
                                        a.m-nav__link(href='')
                                          i.m-nav__link-icon.flaticon-lifebuoy
                                          span.m-nav__link-text Support
                                      li.m-nav__separator.m-nav__separator--fit.m--hide
                                      li.m-nav__item.m--hide
                                        a.btn.btn-outline-danger.m-btn.m-btn--pill.m-btn--wide.btn-sm(href='#') Submit
                  .tab-content
                    #m_user_profile_tab_1.tab-pane.active
                      form.m-form.m-form--fit.m-form--label-align-right
                        .m-portlet__body
                          .form-group.m-form__group.m--margin-top-10.m--hide
                            .alert.m-alert.m-alert--default(role='alert')
                              | The example form below demonstrates common HTML form elements that receive updated styles from Bootstrap with additional classes.
                          .form-group.m-form__group.row
                            .col-10.ml-auto
                              h3.m-form__section 1. Personal Details
                          .form-group.m-form__group.row
                            label.col-2.col-form-label(for='example-text-input') Full Name
                            .col-7
                              input.form-control.m-input(type='text' value='Mark Andre')
                          .form-group.m-form__group.row
                            label.col-2.col-form-label(for='example-text-input') Occupation
                            .col-7
                              input.form-control.m-input(type='text' value='CTO')
                          .form-group.m-form__group.row
                            label.col-2.col-form-label(for='example-text-input') Company Name
                            .col-7
                              input.form-control.m-input(type='text' value='Keenthemes')
                              span.m-form__help
                                | If you want your invoices addressed to a company. Leave blank to use your full name.
                          .form-group.m-form__group.row
                            label.col-2.col-form-label(for='example-text-input') Phone No.
                            .col-7
                              input.form-control.m-input(type='text' value='+456669067890')
                          .m-form__seperator.m-form__seperator--dashed.m-form__seperator--space-2x
                          .form-group.m-form__group.row
                            .col-10.ml-auto
                              h3.m-form__section 2. Address
                          .form-group.m-form__group.row
                            label.col-2.col-form-label(for='example-text-input') Address
                            .col-7
                              input.form-control.m-input(type='text' value='L-12-20 Vertex, Cybersquare')
                          .form-group.m-form__group.row
                            label.col-2.col-form-label(for='example-text-input') City
                            .col-7
                              input.form-control.m-input(type='text' value='San Francisco')
                          .form-group.m-form__group.row
                            label.col-2.col-form-label(for='example-text-input') State
                            .col-7
                              input.form-control.m-input(type='text' value='California')
                          .form-group.m-form__group.row
                            label.col-2.col-form-label(for='example-text-input') Postcode
                            .col-7
                              input.form-control.m-input(type='text' value='45000')
                          .m-form__seperator.m-form__seperator--dashed.m-form__seperator--space-2x
                          .form-group.m-form__group.row
                            .col-10.ml-auto
                              h3.m-form__section 3. Social Links
                          .form-group.m-form__group.row
                            label.col-2.col-form-label(for='example-text-input') Linkedin
                            .col-7
                              input.form-control.m-input(type='text' value='www.linkedin.com/Mark.Andre')
                          .form-group.m-form__group.row
                            label.col-2.col-form-label(for='example-text-input') Facebook
                            .col-7
                              input.form-control.m-input(type='text' value='www.facebook.com/Mark.Andre')
                          .form-group.m-form__group.row
                            label.col-2.col-form-label(for='example-text-input') Twitter
                            .col-7
                              input.form-control.m-input(type='text' value='www.twitter.com/Mark.Andre')
                          .form-group.m-form__group.row
                            label.col-2.col-form-label(for='example-text-input') Instagram
                            .col-7
                              input.form-control.m-input(type='text' value='www.instagram.com/Mark.Andre')
                        .m-portlet__foot.m-portlet__foot--fit
                          .m-form__actions
                            .row
                              .col-2
                              .col-7
                                button.btn.btn-accent.m-btn.m-btn--air.m-btn--custom(type='reset') Save changes
                                button.btn.btn-secondary.m-btn.m-btn--air.m-btn--custom(type='reset') Cancel
                    #m_user_profile_tab_2.tab-pane
                    #m_user_profile_tab_3.tab-pane
